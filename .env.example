# ==============================================================================
# MiniClawd Bot - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ==============================================================================
# SLACK CONFIGURATION (Required)
# ==============================================================================
# Get these from https://api.slack.com/apps → Your App → OAuth & Permissions
# Bot Token starts with xoxb-
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App Token starts with xapp- (for Socket Mode)
# Get from Basic Information → App-Level Tokens
SLACK_APP_TOKEN=xapp-your-app-token

# Signing Secret - Used to verify requests from Slack
# Get from Basic Information → App Credentials
SLACK_SIGNING_SECRET=your-signing-secret

# ==============================================================================
# OPENAI CONFIGURATION (Required)
# ==============================================================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# Model to use for chat completions
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview

# Model for embeddings (used by RAG)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==============================================================================
# GITHUB CONFIGURATION (Optional - for GitHub MCP tools)
# ==============================================================================
# Personal Access Token with repo scope
# Get from https://github.com/settings/tokens
GITHUB_TOKEN=ghp-your-github-token

# Default repository for issue creation (format: owner/repo)
GITHUB_DEFAULT_REPO=

# ==============================================================================
# NOTION CONFIGURATION (Optional - for Notion MCP tools)
# ==============================================================================
# Integration Token
# Get from https://www.notion.so/my-integrations
NOTION_TOKEN=secret_your-notion-token

# Default parent page ID for creating new pages
NOTION_DEFAULT_PARENT_PAGE=

# ==============================================================================
# RAG CONFIGURATION
# ==============================================================================
# Maximum messages to index per channel
RAG_MESSAGES_PER_CHANNEL=200

# How often to re-index channels (in hours)
RAG_INDEX_FREQUENCY_HOURS=6

# Minimum message length to include in index
RAG_MIN_MESSAGE_LENGTH=10

# ==============================================================================
# MEMORY CONFIGURATION
# ==============================================================================
# Directory for memory files (relative to project root)
MEMORY_DIR=memory

# Enable heartbeat checks (sends periodic reminders)
ENABLE_HEARTBEAT=true

# Heartbeat interval in minutes
HEARTBEAT_INTERVAL_MINUTES=60

# ==============================================================================
# LOGGING
# ==============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
